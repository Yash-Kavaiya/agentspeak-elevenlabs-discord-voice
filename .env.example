# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Google AI / Gemini Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model (optional - defaults to gemini-2.5-flash-native-audio-preview-12-2025)
# Options:
#   - gemini-2.5-flash-native-audio-preview-12-2025 (default, best for voice)
#   - gemini-2.0-flash-live-001
GEMINI_MODEL=gemini-2.5-flash-native-audio-preview-12-2025

# System Instruction (optional - customize agent personality)
SYSTEM_INSTRUCTION=You are a helpful AI assistant in a Discord voice channel. Be conversational, friendly, and concise.

# Bot Settings
# Auto-join voice channel when user joins (true/false)
AUTO_JOIN_VOICE=true

# Greeting message when user joins
GREETING_ENABLED=true
GREETING_MESSAGE=Hello! I'm your AI assistant. How can I help you today?

# Debug mode
DEBUG=false
